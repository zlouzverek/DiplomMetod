@{
    ViewData["Title"] = "Главная";
    Layout = "_Layout";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!-- Основной блок страницы с фоновым изображением -->
<main class="home-main">
    <!-- Центральный контейнер с контентом -->
    <div class="home-content">
        <!-- Шапка с логотипом и заголовком -->
        <div class="home-header">
            <!-- Логотип организации -->
            <img src="~/img/Giac.png" alt="Эмблема" class="home-logo" />
            <div class="home-title-wrapper">
                <!-- Главный заголовок страницы -->
                <h1 class="home-title">
                    Сервис для организации учета и поиска<br>
                    методических рекомендаций по заполнению<br>
                    статистических карточек "Методика"
                </h1>
            </div>
        </div>

        <!-- Декоративная разделительная линия -->
        <div class="home-divider"></div>

        <!-- Блок с основными разделами меню -->
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="home-menu">
                <a href="@Url.Action("Index", "Form")">Методические рекомендации</a>

                @if (User.IsInRole("Administrator"))
                {
                <a href="@Url.Action("Index", "ReferenceBook")">Справочники</a>
                <a href="@Url.Action("Index", "RegionDivision")">Регионы (подразделения)</a>
                <a href="@Url.Action("Index", "Organization")">Организации</a>
                <a href="@Url.Action("Index", "FormType")">Действующие формы</a>
                }

                <a href="@Url.Action("Index", "InstructionManual")">Инструкция </a>
            </div>
        }
        

        <!-- Блок статистики внизу страницы -->
        <div class="home-stats">
            <img src="~/img/Search.gif" alt="Анимация поиска" class="home-logo" />
        </div>
    </div>
</main>