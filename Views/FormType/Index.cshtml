@using DiplomMetod.Data.Entites
@model IEnumerable<FormType>;



<h1 class="mb-4">Действующие типы формы</h1>

<div class="table-responsive">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th class="small text-center align-middle">Номер формы</th>
				<th class="small text-center align-middle">Полное наименование формы</th>
				<th class="small text-center align-middle">Действия</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var form in Model)
			{
				<tr>
					<td>@form.Name</td>
					<td>@form.FullName</td>

					<td>
						<div class="btn-group" role="group">
							<a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@form.Id">Редактировать</a>
							<a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@form.Id">Удалить</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

