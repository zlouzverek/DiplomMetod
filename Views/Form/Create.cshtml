<h1>Создать методическую рекомендацию</h1>


@* #FIXME:что то никака *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Form Types</label>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="formTypesDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Select Form Type
                    </button>
                    <div class="dropdown-menu" aria-labelledby="formTypesDropdown">
                        @foreach (var formType in Model.FormTypes)
                        {
                            <a class="dropdown-item" href="#" data-value="@formType.Id">@formType.Name</a>
                        }
                    </div>
                    <input type="hidden" id="selectedFormType" name="FormTypeId" value="" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Reference Books</label>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="referenceBooksDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Select Reference Book
                    </button>
                    <div class="dropdown-menu" aria-labelledby="referenceBooksDropdown">
                        @foreach (var referenceBook in Model.ReferenceBooks)
                        {
                            <a class="dropdown-item" href="#" data-value="@referenceBook.Id">@referenceBook.Name</a>
                        }
                    </div>
                    <input type="hidden" id="selectedReferenceBook" name="ReferenceBookId" value="" />
                </div>
            </div>
        </form>

        <form>
            <div class="form-group">
                <label asp-for=@Model.Code class="control-label"></label>
                <input asp-for=@Model.Code class="form-control" />
            </div>

         
        </form>
           
          

       
    </div>
</div>

<div>
    <a asp-action="Index">К списку рекомендаций</a>
</div>


                section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.dropdown-item').forEach(function (element) {
            element.addEventListener('click', function (event) {
                event.preventDefault();
                var value = this.getAttribute('data-value');
                var dropdownMenu = this.closest('.dropdown-menu');
                var dropdownToggle = dropdownMenu.previousElementSibling;
                var hiddenInput = dropdownMenu.nextElementSibling;

                dropdownToggle.textContent = this.textContent;
                hiddenInput.value = value;
            });
        });
    });
</script>