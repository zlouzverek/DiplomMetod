<!-- edit.html -->
@using DiplomMetod.Models
@model FormCreateViewModel

@{
    ViewData["Title"] = "Изменить методическую рекомендацию";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="col-md-6">
            <label asp-for="FormTypeId" class="form-label">Тип формы</label>
            <select asp-for="FormTypeId" asp-items="Model.FormTypes" class="form-select">
                <option value="">Выберите тип формы</option>
            </select>
            <span asp-validation-for="FormTypeId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ReferenceBooksId" class="form-label">Справочник</label>
            <select asp-for="ReferenceBooksId" asp-items="Model.ReferenceBooks" class="form-select">
                <option value="">Выберите справочник</option>
            </select>
            <span asp-validation-for="ReferenceBooksId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="RequisiteNumber" class="form-label">Номер реквизита</label>
            <input asp-for="RequisiteNumber" class="form-control" />
            <span asp-validation-for="RequisiteNumber" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Code" class="form-label">Код</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ExplanationName" class="form-label">Наименование</label>
            <input asp-for="ExplanationName" class="form-control" />
            <span asp-validation-for="ExplanationName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ExplanationFullName" class="form-label">Полное наименование</label>
            <input asp-for="ExplanationFullName" class="form-control" />
            <span asp-validation-for="ExplanationFullName" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="ExplanationNumber" class="form-label">Номер</label>
            <input asp-for="ExplanationNumber" class="form-control" />
            <span asp-validation-for="ExplanationNumber" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="ExplanationDate" class="form-label">Дата</label>
            <input asp-for="ExplanationDate" type="date" class="form-control" />
            <span asp-validation-for="ExplanationDate" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="OrganizationId" class="form-label">Кто дал разъяснение</label>
            <select asp-for="OrganizationId" asp-items="Model.Organizations" class="form-select">
                <option value="">Выберите организацию</option>
            </select>
            <span asp-validation-for="OrganizationId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RegionDivisionId" class="form-label">Кому разъяснено</label>
            <select asp-for="RegionDivisionId" asp-items="Model.RegionDivisions" class="form-select">
                <option value="">Выберите подразделение</option>
            </select>
            <span asp-validation-for="RegionDivisionId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="ApproveLevel" class="form-label">Уровень утверждения</label>
            <select asp-for="ApproveLevel" asp-items="Model.ApproveLevels" class="form-select">
                <option value="">Выберите уровень</option>
            </select>
            <span asp-validation-for="ApproveLevel" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="File" class="form-label">Файл</label>
            <input asp-for="File" type="file" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>


            <input type="hidden" asp-for="FileLink" />

            @if (!string.IsNullOrEmpty(Model.FileLink))
            {
                <div class="mt-2">
                    <a href="@Model.FileLink" target="_blank">Текущий файл</a>
                </div>
            }
        </div>

        <div class="col-md-3 form-check">
            <input asp-for="IsAgreedGenProk" class="form-check-input" />
            <label asp-for="IsAgreedGenProk" class="form-check-label">Согласовано с Генпрокуратурой</label>
        </div>

        <div class="col-md-3 form-check">
            <input asp-for="IsRevelant" class="form-check-input" />
            <label asp-for="IsRevelant" class="form-check-label">Актуально</label>
        </div>

        <div class="col-md-3 form-check">
            <input asp-for="IsFavorites" class="form-check-input" />
            <label asp-for="IsFavorites" class="form-check-label">В избранном</label>
        </div>

        <div class="col-12">
            <label asp-for="ExplanationComment" class="form-label">Комментарий</label>
            <textarea asp-for="ExplanationComment" class="form-control"></textarea>
            <span asp-validation-for="ExplanationComment" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="ExplanationDescription" class="form-label">Пример из жизни</label>
            <textarea asp-for="ExplanationDescription" class="form-control"></textarea>
            <span asp-validation-for="ExplanationDescription" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="IsQuestion" class="form-label fw-bold text-primary">Относится к категории Вопрос/Ответ</label>
            <select asp-for="IsQuestion" class="form-select">
                <option value="true">Да</option>
                <option value="false">Нет</option>
            </select>
            <span asp-validation-for="IsQuestion" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="Question" class="control-label">Вопрос</label>
            <textarea asp-for="Question" class="form-control" rows="3" placeholder="Введите вопрос"></textarea>
            <span asp-validation-for="Question" class="text-danger"></span>
        </div>

        <div class="col-md-12">
            <label asp-for="Answer" class="control-label">Ответ</label>
            <textarea asp-for="Answer" class="form-control" rows="3" placeholder="Введите ответ"></textarea>
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Event" class="control-label">Площадка для вопроса</label>
            <input asp-for="Event" class="form-control" placeholder="Введите наименование площадки в рамках которой задан вопрос" />
            <span asp-validation-for="Event" class="text-danger"></span>
        </div>


        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary">Изменить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </div>


    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}