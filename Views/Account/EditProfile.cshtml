@using DiplomMetod.Models
@model UserProfileViewModel

<div class="row justify-content-center">
    <div class="card shadow my-2 col-lg-10">
        <div class="card-body">
            <form asp-controller="Account" asp-action="EditProfile" enctype="multipart/form-data">
                <div class="validation" asp-validation-summary=ModelOnly></div>
                <div class="row justify-content-center">
                    <div class="col">
                        <div class="mb-3">
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="имя" value="@Model.FirstName" />
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="text" asp-for="LastName" class="form-control" placeholder="фамилия" value="@Model.LastName" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="email" asp-for="Email" class="form-control" placeholder="email" value="@Model.Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="телефон" value="@Model.PhoneNumber" />
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-dark">Изменить</button>
                        </div>
                        <input hidden asp-for="Id" value="@Model.Id" />
                        <input hidden asp-for="ReturnUrl" value="@Model.ReturnUrl" />
                        <div class="mb-3 text-center">
                            <a class="btn btn-dark" asp-controller="Account" asp-action="Profile">Отмена</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
