<div class="row justify-content-center ">
    <div class="card shadow my-2 col-lg-10">
        <div class="card-body">
            <div class="row">
                <div class="col-8 text-sm-lg-start">
                    <div class="my-2">
                        <h1>@Model.FirstName</h1>
                        <h1>@Model.LastName</h1>
                    </div>
                    <div class="my-2">
                        <h4>@Model.Email</h4>
                    </div>
                    <div class="my-2">
                        <a class="btn btn-secondary me-2" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path" asp-action="EditProfile" class="link-dark"><h6>Изменить персональную информацию</h6></a>
                    </div>
                    <a asp-action="ResetPassword" asp-route-userId="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-warning mt-3">Сменить пароль</a>
                </div>
            </div>
        </div>
    </div>
</div>
